@model IEnumerable<examen2.Models.compraCine>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista las Compra de Ticket de Cine</h2>

<p>
    @Html.ActionLink("Crear", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ticket.nombrePelicula)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.cantidadNinos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cantidadRegular)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descuento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cargoServicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.total)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ticket.nombrePelicula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidadNinos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidadRegular)
            </td>
            <td>
                ₡  @Html.DisplayFor(modelItem => item.descuento)
            </td>
            <td>
                ₡  @Html.DisplayFor(modelItem => item.cargoServicio)
            </td>
            <td>
                ₡  @Html.DisplayFor(modelItem => item.total)
            </td>

        </tr>
    }

</table>
